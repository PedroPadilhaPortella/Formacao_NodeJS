<%-include('partials/header')%>

<%-include('./partials/navbar')%>

<body>
    <div class="container my-4 container-narrow">

        <% result.articles.rows.forEach((article) => { %>
            <div class="card-header flex">
                <h3><%=article.title%></h3>
            </div>
            <div class="card-body">
                <a href="/<%=article.slug%>" class="btn btn-info">Open Article</a>
            </div>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) { %>
                <a href="/articles/page/<%=result.page - 1%>" style="float: left;"><< Previous</a>
                <% } else { %>
                    <a href="/" style="float: left;"><< Previous</a>
                <% } %>

                <% if(result.next) { %>
                <a href="/articles/page/<%=result.page + 1%>" style="float: right;">Next >></a>
                <% } %>
            </div>
        </div>
        <hr>

    </div>
</body>

<%-include('partials/footer')%>