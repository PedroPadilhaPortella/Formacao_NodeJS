<%-include('partials/header')%>

<%-include('./partials/navbar')%>

<body>
    <div class="container my-4 container-narrow">
        
        <hr>
        <div class="jumbotron p-2">
            <h1 class="display-4">Welcome to GuidePress!</h1>
            <p class="lead">Where developers find their answers, GuidePress is a online . . .</p>
            <hr class="my-2">
        </div>

        <% articles.forEach((article) => { %>
            <div class="card-header flex">
                <h3><%=article.title%></h3>
            </div>
            <div class="card-body">
                <a href="/<%=article.slug%>" class="btn btn-info">Open Article</a>
            </div>
        <% }) %>
        
        <% if(paginate) { %>
            <div class="row">
                <div class="col col-12">
                    <a href="articles/page/2" style="float: right;">Next >></a>
                </div>
            </div>
            <hr>
        <% } %>
        
    </div>
</body>

<%-include('partials/footer')%>