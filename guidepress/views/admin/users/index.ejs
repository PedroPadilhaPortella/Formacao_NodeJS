<%-include('../../partials/header')%>

<%-include('../../partials/admin-navbar')%>

<div class="container my-4 container-narrow">
    <h2 class="text-center">Users</h2>
    <hr>
    <a href="/users/admin/create" class="btn btn-success">Create User</a>
    <div class="card my-3">
        <table class="table table-striped">
            <thead class="table-content">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user) => { %>
                <tr class="table-content">
                    <td><%=user.id%></td>
                    <td><%=user.email%></td>
                    <td>
                        <a href="/users/admin/edit/<%=user.id%>" type="submit" 
                        class="btn btn-sm btn-warning">
                            Edit
                        </a>
                        <form method="POST" action="/users/admin/delete" 
                        style="display: inline;" onsubmit="confirmDelection(event, this)">
                            <input type="hidden" value="<%=user.id%>" name="id">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</a>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%-include('../../partials/footer')%>

<script>
    function confirmDelection(event, form) {
        event.preventDefault()
        const decisao = confirm('Are you sure you Want to Delete this User?')
        if(decisao) {
            form.submit();
        }
    }
</script>