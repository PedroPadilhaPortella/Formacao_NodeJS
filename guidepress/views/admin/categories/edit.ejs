<%-include('../../partials/header')%>

<div class="container my-4 container-width">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">Edição Categoria</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/admin/update">
                <label>Título</label>
                <input type="hidden" name="id" value="<%=category.id%>">
                <input type="text" name="title" value="<%=category.title%>" 
                    class="form-control" placeholder="Título"
                >
                <button class="btn btn-primary my-3">Atualizar</button>
            </form>
        </div>
    </div>
</div>

<%-include('../../partials/footer')%>