<%-include ('partials/header')%>

<body>
    <%-include ('partials/navbar')%>
    <div class="container container-width my-4">
        <div class="card">
            <div class="card-header">
                <h2><%=pergunta.titulo%></h2>
            </div>
            <div class="card-body p-3">
                <p><%=pergunta.descricao%></p>
            </div>
            <div class="card-footer">
                <h4 class="text-center">Respostas mais recentes</h4>
                <ul class="list-group list-group-flush">
                    <% if(respostas.length > 0) { %>
                        <% respostas.forEach((resposta) => { %>
                            <li class="list-group-item">
                                <%= resposta.descricao %>
                                <p class="data-pergunta"><%=resposta.updatedAt%></p>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center my-5">Não há nenhuma resposta para esta pergunta.</p>
                    <% } %>
                </ul>
                <hr class="my-1">
                <h4 class="text-center mt-3">Adicione uma Resposta Pública</h4>
                <form action="/answer-question" method="POST">
                    <input type="hidden" name="pergunta" value="<%=pergunta.id%>">
                    <textarea class="form-control" name="descricao" id="descricao" rows="8"
                        placeholder="Adicione uma Resposta para essa pergunta.."></textarea>
                    <button type="submit" class="btn btn-primary mt-2">Responder</button>
                </form>
            </div>
        </div>
    </div>
</body>

<%-include ('partials/footer')%>