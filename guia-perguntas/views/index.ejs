<%-include ('partials/header')%>

<body>
    <%-include ('partials/navbar')%>
    
    <div class="container container-width">
        <h1 class="text-center">Guia de Perguntas</h1>
        <hr>
        <div class=" d-flex flex-row-reverse">
            <a href="/ask" class="btn btn-success mb-3">Fazer uma Pergunta</a>
        </div>
        <% perguntas.forEach((pergunta) => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <p><%=pergunta.titulo%></p>
                    <h3><%=pergunta.titulo%></h3>
                </div>
                <div class="card-footer">
                    <a href="/ask/<%=pergunta.id%>" class="btn btn-info">Responder</a >
                </div>
            </div>
        <% }) %>
    </div>
</body>

<%-include ('partials/footer')%>